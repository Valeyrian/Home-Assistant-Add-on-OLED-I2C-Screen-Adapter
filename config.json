{
  "name": "Contrôleur d'Écran OLED GME12864",
  "version": "0.2.0",
  "init": false,
  "slug": "oled-gme12864-system-display",
  "description": "Add-on pour contrôler un écran OLED GME12864 via I2C avec affichage des informations système, réseau et capteurs via MQTT. Le tout sur le rasp qui host Home Assistant.",
  "url": "https://github.com/votre_utilisateur/oled-gme12864-addon",
  "arch": ["aarch64", "armhf", "armv7", "amd64"],
  "startup": "services",
  "boot": "auto",
  "map": ["config:rw"],
  "privileged": ["SYS_RAWIO"],
  "host_network": true,
  "devices": ["/dev/i2c-1", "/dev/i2c-0"],
  "full_access": false,
  "options": {
    "mqtt_broker": "core-mqtt",
    "mqtt_port": 1883,
    "mqtt_user": "homeassistant",
    "mqtt_password": "",
    "i2c_address": "0x3C",
    "i2c_port": 1,
    "display_width": 128,
    "display_height": 64,
    "display_type": "ssd1306",
    "refresh_interval": 5,
    "auto_brightness": true,
    "default_brightness": 255,
    "topics": {
      "text": "screen/gme12864/text",
      "command": "screen/gme12864/command",
      "mode": "screen/gme12864/mode",
      "brightness": "screen/gme12864/brightness",
      "refresh": "screen/gme12864/refresh"
    }
  },
  "schema": {
    "mqtt_broker": "str",
    "mqtt_port": "port",
    "mqtt_user": "str",
    "mqtt_password": "password",
    "i2c_address": "str",
    "i2c_port": "int(0,1)",
    "display_width": "int",
    "display_height": "int",
    "display_type": "list(ssd1306|sh1106)",
    "refresh_interval": "int(1,60)",
    "auto_brightness": "bool",
    "default_brightness": "int(0,255)",
    "topics": {
      "text": "str",
      "command": "str", 
      "mode": "str",
      "brightness": "str",
      "refresh": "str"
    }
  },
  "ports": {},
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "environment": {
    "LOG_LEVEL": "info"
  }
}
